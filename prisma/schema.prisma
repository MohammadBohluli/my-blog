generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

// TODO: isActive must be change to false
model Users {
  id        Int      @id() @default(autoincrement())
  email     String   @unique
  name      String
  isActive  Boolean  @default(true)
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  DRAFT
  PUBLISHED
}

model Articles {
  id        Int      @id() @default(autoincrement())
  title     String
  body      String
  status    Status   @default(DRAFT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
